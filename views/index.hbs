<div class="container login-page">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="text-center">Welcome to TaskInator, where tasks get obliviated!</h3>
            <br><br>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-5 col-centered well">
            <form id="login-form" method="POST" action="">
                <legend>{{title}}</legend>
                <br>
                <div class="form-group row">
                    <label for="userName" class="col-xs-2 col-form-label">Username</label>
                    <div class="col-xs-10">
                        <input type="text" class="form-control" name="userName" id="userName" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="password" class="col-xs-2 col-form-label">Password</label>
                    <div class="col-xs-10">
                        <input type="text" class="form-control" name="password" id="password" />
                    </div>
                </div>
                <br>
                <button type="submit" class="btn btn-success"> Log In </button>
            </form>
        </div>  <!-- /.col -->
    </div>  <!-- /.row -->
</div> <!-- /.container -->