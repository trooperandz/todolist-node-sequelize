<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <br>
            <legend>To-Do Items</legend>

            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#task-list-pending" aria-controls="task list" role="tab" data-toggle="tab">Pending Tasks</a></li>
                <li role="presentation"><a href="#task-list-completed" aria-controls="task list" role="tab" data-toggle="tab">Completed Tasks</a></li>
                <li role="presentation"><a href="#add-task" aria-controls="add task" role="tab" data-toggle="tab">Add Task</a></li>
            </ul>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="task-list-pending">
                    <br>
                    <div class="well">
                        <legend> Pending Tasks </legend>
                        <div class="table-responsive">
                            {{{pendingTable}}}
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane fade" id="task-list-completed">
                    <br>
                    <div class="well">
                        <legend> Completed Tasks </legend>
                        <div class="table-responsive">
                            {{{completedTable}}}
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane fade" id="add-task">
                    <br>
                    <div class="well">
                        <legend> Add New Task </legend>
                        <form method="POST" action="/tasks/addTask">
                            <div class="form-group row">
                                <label for="title" class="col-xs-2 col-form-label">Task</label>
                                <div class="col-xs-10">
                                    <input type="text" class="form-control" name="title" id="title" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="notes" class="col-xs-2 col-form-label">Notes</label>
                                <div class="col-xs-10">
                                    <input type="text" class="form-control" name="notes" id="notes" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="UserId" class="col-xs-2 col-form-label">User</label>
                                <div class="col-xs-10">
                                    <select class="form-control" name="UserId" id="UserId">
                                        <option value="">Select...</option>
                                      {{#each users}}
                                        <option value="{{id}}">{{userName}}</option>
                                      {{/each}}
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="CategoryId" class="col-xs-2 col-form-label">Category</label>
                                <div class="col-xs-10">
                                    <select class="form-control" name="CategoryId" id="CategoryId">
                                        <option value="">Select...</option>
                                      {{#each categories}}
                                        <option value="{{id}}">{{title}}</option>
                                      {{/each}}
                                    </select>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success"> Add Task </button>
                        </form>
                    </div> <!-- ./well -->
                </div> <!-- ./tab-pane -->
            </div> <!-- /.tab-content -->
        </div> <!-- /.col -->
    </div> <!-- /.row -->
</div> <!-- /.container -->